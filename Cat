public class Cat {
    static int count;
    String name;
    int id;

    Cat() {
        count++;
        this.id = count;
    }

    Cat(String name) {
        this();
        this.name = name;
    }

    void showNumber() {
        System.out.println("Порядковый номер кошки " + name + " - " + id);
    }

    static void showCount() {
        System.out.println("Общее число кошек - " + count);
    }

}
